<%= content_for :app_page_title do %>
  <%= content_for?(:page_title) ? yield(:page_title) : "#{@page_title} â€” #{strip_tags(@site_name.content.body)}".squish %>
<% end %>

<%= content_for :entry_date do %>
  <% if entry_date %>
    <meta name='entry_date' content='<%= entry_date %>'>
  <% end %>
<% end %>

<%= content_for :content do %>
  <%= render partial: 'header' %>
  <%= render partial: 'main_menu' %>
  <% if current_staff_user %>
    <%= render 'user_impersonate/header' %>
  <% end %>
  <%= render partial: 'content' %>
  <%= render partial: 'bottom_menu' %>
  <%= render partial: 'footer' %>
  <%= render partial: 'development' if Rails.env.development? %>
<% end %>

<%= render :file => 'layouts/base' %>
