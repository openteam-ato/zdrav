<% collection = object.to_a %>
<% collection.shift %>
<% current = collection.pop.try(:first).try(:gsub, /\s\|.*$/, '') %>

<% if collection.any? %>
  <div class='breadcrumbs noindex'>
    <%= collection.map {|item| link_to(item.first, item.second)}.push(current).join(' / ').html_safe %>
  </div>
<% end %>
