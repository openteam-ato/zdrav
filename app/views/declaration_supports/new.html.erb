<div class="row declaration-support-new-wrapper">
  <div class="col-xs-12">
    <h1><%= @page.title %></h1>
  </div>
  <%= simple_form_for @declaration_support, url: declaration_supports_path do |f| %>
    <div class='col-xs-6 margin-top-20'>
      <% if @declaration_support.errors.present? %>
        <div class="alert alert-danger">
          <ul>
            <% @declaration_support.errors.messages.each_value do |message| %>
              <li><%= message.first %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.input :surname %>
      <%= f.input :name %>
      <%= f.input :patronymic %>
      <%= f.input :job %>
      <%= f.input :regional_institution_job, collection: DeclarationSupport.regional_institutions, as: :grouped_select, group_method: :last %>
      <%= f.input :email %>
      <%= f.input :agreement %>
      <%= recaptcha_tags %>
      <%= f.submit nil, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
