<div class="row declaration-support-new-wrapper">
  <div class="col-xs-12">
    <h1><%= @page.title %></h1>
  </div>
  <%= simple_form_for @declaration_support, url: declaration_supports_path do |f| %>
    <div class='col-xs-6 margin-top-20'>
      <% if @declaration_support.errors.present? %>
        <div class="alert alert-danger">
          <ul>
            <% @declaration_support.errors.full_messages.each do |error_message| %>
              <li><%= error_message if @declaration_support.errors.full_messages.first == error_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.input :surname %>
      <%= f.input :name %>
      <%= f.input :patronymic %>
      <%= f.input :job, collection: @regional_institutions, as: :grouped_select, group_method: :last %>
      <%= f.input :email %>
      <%= f.input :agreement %>
      <%= recaptcha_tags %>
      <%= f.submit nil, class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
