<div class='content row'>
  <div class='col-xs-3'>
    <div class='subnavigation'>
      <%= render_partial_for_region(@subnavigation, 'sub') if @subnavigation.present? %>
      <% if @left_side_links.present? %>
        <div class='left_side_links'>
          <%= render_partial_for_region(@left_side_links) %>
        </div>
      <% end %>
    </div>
  </div>

  <div class='col-xs-9'>
    <%= render_partial_for_region(@breadcrumbs, 'full', { :current => 'Оставить благодарность' }) if @breadcrumbs.present? %>
    <h1 class='page-header <%= header_css_class %>'>Оставить благодарность</h1>

    <div class='html-part'>
      <%= simple_form_for @thank do |f| %>
        <%= f.input :fullname %>
        <%= f.input :email %>
        <%= f.input :message %>
        <%= recaptcha_tags :display => { :theme => 'clean' }, :ajax => true %>
        <% if flash[:alert] %>
          <p class='recaptcha-alert text-danger'><%= flash[:alert] %></p>
        <% end %>
        <div class='actions'>
          <%= f.button :submit, 'Отправить', class: 'submit' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
