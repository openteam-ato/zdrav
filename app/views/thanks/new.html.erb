<%= simple_form_for @thank,
                    :defaults => { :input_html => { :class => 'form-control' }, :wrapper_html => { :class => 'form-group' } } do |f| %>

  <%= f.input :fullname %>
  <%= f.input :email %>
  <%= f.input :message %>
  <%= recaptcha_tags :display => { :theme => 'white' }, :ajax => true %>

  <%= f.submit I18n.t('save'), :class => 'button' %>
<% end %>
