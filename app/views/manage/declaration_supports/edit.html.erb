<div class="row declaration-support-new-wrapper">
  <div class="col-xs-12">
    <h1>Редактирование</h1>
  </div>
  <%= simple_form_for [:manage, @declaration_support] do |f| %>
    <div class='col-xs-6 margin-top-20'>
      <% if @declaration_support.errors.present? %>
        <div class="alert alert-danger">
          <ul>
            <% @declaration_support.errors.full_messages.each do |error_message| %>
              <li><%= error_message if @declaration_support.errors.full_messages.first == error_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.input :job %>
      <%= f.submit 'Сохранить', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>
