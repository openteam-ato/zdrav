<div class="js-file-upload-wrapper">
  <% if f.object.send(input_name).present? %>
    <p>
      <%= I18n.t "video_message.kind.#{input_name}" %>:
      <%= link_to f.object.send(input_name).original_filename, resource.send(input_name).url, target: '_blank' %>
    </p>
  <% end %>
  <%= f.input input_name, as: :file, input_html: { class: "js-video-file" } %>
  <div class="progress hidden js-progress-bar-wrapper">
    <div class="progress-bar js-progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 0%;"></div>
  </div>
</div>
